{
	"name": "humanik/wp-common",
	"description": "Useful common classes for WordPress development",
	"license": "GPL-2.0-or-later",
	"type": "library",
	"keywords": [
		"wordpress",
		"common",
		"utilities"
	],
	"authors": [
		{
			"name": "Humanik",
			"homepage": "https://github.com/humanik"
		}
	],
	"homepage": "https://github.com/humanik/wp-common",
	"support": {
		"issues": "https://github.com/humanik/wp-common/issues",
		"source": "https://github.com/humanik/wp-common"
	},
	"autoload": {
		"psr-4": {
			"Humanik\\WP_Common\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Humanik\\WP_Common\\PHPUnit\\Includes\\": "tests/phpunit/includes"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=7.4",
		"ext-json": "*"
	},
	"require-dev": {
		"automattic/vipwpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpstan/phpstan": "^1.10 | ^2.1",
		"slevomat/coding-standard": "^8.0",
		"squizlabs/php_codesniffer": "^3.7",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"wp-coding-standards/wpcs": "^3.0",
		"wp-phpunit/wp-phpunit": "^6.8",
		"yoast/phpunit-polyfills": "^4.0"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"php-http/discovery": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"platform": {
			"php": "7.4"
		}
	},
	"scripts": {
		"lint": [
			"@phpcs",
			"@phpstan"
		],
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpstan": "phpstan analyze --memory-limit=512M"
	}
}
