{
	"name": "humanik/wp-common",
	"description": "Useful common classes for WordPress development",
	"license": "GPL-2.0-or-later",
	"type": "library",
	"keywords": [
		"wordpress",
		"common",
		"utilities"
	],
	"authors": [
		{
			"name": "Humanik",
			"homepage": "https://github.com/humanik"
		}
	],
	"homepage": "https://github.com/humanik/wp-common",
	"support": {
		"issues": "https://github.com/humanik/wp-common/issues",
		"source": "https://github.com/humanik/wp-common"
	},
	"autoload": {
		"psr-4": {
			"Humanik\\WP\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Humanik\\WP\\PHPUnit\\Tests\\": "tests/phpunit/tests"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=8.4",
		"ext-json": "*",
		"illuminate/support": "^12.48",
		"illuminate/container": "^12.48",
		"johnbillion/args": "^2.3"
	},
	"require-dev": {
		"automattic/vipwpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"php-stubs/wordpress-stubs": "^6.8",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpstan/phpstan": "^1.10 | ^2.1",
		"slevomat/coding-standard": "^8.0",
		"squizlabs/php_codesniffer": "^3.7",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"wp-coding-standards/wpcs": "^3.0",
		"phpunit/phpunit": "^8.0",
		"wp-phpunit/wp-phpunit": "^6.8",
		"yoast/phpunit-polyfills": "^4.0",
		"johnpbloch/wordpress": "^6.9",
		"wp-cli/wp-cli": "^2.12",
		"php-stubs/acf-pro-stubs": "^6.5"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"php-http/discovery": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		},
		"platform": {
			"php": "8.4"
		}
	},
	"scripts": {
		"lint": [
			"@phpcs",
			"@phpstan"
		],
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpstan": "phpstan analyze --memory-limit=512M",
		"test-php": "phpunit -c phpunit.xml.dist --verbose",
		"test-php-multisite": "phpunit -c tests/phpunit/multisite.xml --verbose"
	}
}
